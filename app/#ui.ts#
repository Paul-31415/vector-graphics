import * as PIXI from "pixi.js";
import { Drawable } from "./drawable";
import { Canvas } from "./canvas";
import { PtTransform } from "./transform";



class UI {
	//handles conversion of interactionEvents to things like which keys are being pressed, etc
    public 
    constructor(public app: PIXI.Application) {
		this.app.stage.interactive = true;
	}
    mousePos(): PIXI.Point {
        return this.app.renderer.plugins.interaction.mouse.global
    }
    mouseDown(): boolean {
        throw ("not implemented");
    }
	//mouseDownCallback(e


}




function button(d: Drawable, t: PtTransform): PIXI.Graphics {
    var b = d.draw(t);
    b.interactive = true;
    b.buttonMode = true;
    return b;
}


export {
    button, UI
}
